{
  "name": "last-words",
  "version": "1.0.0",
  "description": "Last Words: A 2-player + spectators voice-first puzzle game",
  "private": true,
  "workspaces": [
    "web",
    "backend",
    "infra"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "pnpm -r build",
    "dev:web": "pnpm --filter web dev",
    "deploy:infra": "pnpm --filter infra cdk deploy --require-approval never",
    "synth": "pnpm --filter infra cdk synth",
    "deploy:web": "pnpm --filter web run upload",
    "deploy:backend": "pnpm --filter backend build && pnpm --filter infra cdk deploy --require-approval never",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.2"
  }
}
